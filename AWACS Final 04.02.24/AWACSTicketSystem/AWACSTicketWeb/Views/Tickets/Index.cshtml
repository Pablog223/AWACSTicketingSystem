﻿@model IEnumerable<AWACSTicketLibrary.Ticket>

@{
    ViewBag.Title = "List of tickets";
}

<body>
    <h2>Ticket List</h2>

    <p></p>
    <div>
        @using (Html.BeginForm("Index", "Tickets", FormMethod.Get))
        {
            <table>
                <tr>
                    <td>
                        <span><b>Search by: </b></span>
                        @Html.RadioButton("searchBy", "TicketId")
                        <text> TicketId </text>
                        @Html.RadioButton("searchBy", "Category", true)
                        <text> Category </text>
                        @Html.RadioButton("searchBy", "Creator")
                        <text> Creator </text>
                        @Html.RadioButton("searchBy", "Responsible")
                        <text> Responsible </text>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBox("searchValue", null, new { Class = "form-control", style = " min-width:80px; max-width:100%;min-height:35px;height:100%;width:100%;", placeholder = "Search by TicketId, Category, Creator or Responsible" })
                    </td>
                    <td>
                        <input type="submit" value="Search" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <p>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlannedEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Progress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Responsible
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Solution)
                </td>
                <td>
                    @item.PlannedEndDate.ToString(string.Format("dd/MM/yyyy"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsible.Name)
                    @Html.DisplayFor(modelItem => item.Responsible.Surname)
                </td>
                <td>
                    <button class="btn btn-info" onclick="location.href= '@Url.Action("Details","Tickets", new { id = item.Id })'">Details</button> |
                    <button class="btn btn-warning" onclick="location.href= '@Url.Action("Edit","Tickets", new { id = item.Id })'">Edit</button> |
                    <button class="btn btn-danger" onclick="location.href= '@Url.Action("Delete","Tickets", new { id = item.Id })'">Delete</button> |
                </td>
            </tr>
        }
    </table>
    <p></p>
    <div>
        <p><button class="btn btn-primary btn-md" onclick="location.href= '@Url.Action("Create","Tickets")'">Create a new ticket &#9997;</button></p>
    </div>
</body>