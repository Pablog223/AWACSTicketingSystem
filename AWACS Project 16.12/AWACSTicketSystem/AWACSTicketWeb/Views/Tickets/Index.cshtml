﻿@model IEnumerable<AWACSTicketLibrary.Ticket>

@{
    ViewBag.Title = "List of tickets";
}

<body>
    <h2>Index</h2>

    <p></p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateObserved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlannedEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Progress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Creator
            </th>
            <th>
                Responsible
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Solution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateObserved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlannedEndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator.Name)
                    @Html.DisplayFor(modelItem => item.Creator.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsible.Name)
                    @Html.DisplayFor(modelItem => item.Responsible.Surname)
                </td>
                <td>
                    <button class="btn btn-info" onclick="location.href= '@Url.Action("Details","Workers", new { id = item.Id })'">Details</button> |
                    <button class="btn btn-warning" onclick="location.href= '@Url.Action("Edit","Workers", new { id = item.Id })'">Edit</button> |
                    <button class="btn btn-danger" onclick="location.href= '@Url.Action("Delete","Workers", new { id = item.Id })'">Delete</button> |
                </td>
            </tr>
        }
    </table>
    <p></p>
    <div>
        <p><button class="btn btn-primary btn-md" onclick="location.href= '@Url.Action("Create","Tickets")'">Create a new ticket &#9997;</button></p>
    </div>
</body>